/* 
Runtime: 15 ms, faster than 76.08% of C++ online submissions.
Memory: 27.24 MB, less than 67.62% of C++ online submissions.
*/

class Solution {
public: 
    void reverseString(vector<char>& s) {
        int left = 0;
        int right = s.size() - 1;
         
        while (left < right) {
            // Swap the characters 
            char temp = s[left];
            s[left] = s[right];
            s[right] = temp;
            
            // Move the pointers towards the center
            left++;
            right--; 
        }
    }
};
